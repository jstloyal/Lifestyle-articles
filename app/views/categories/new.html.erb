<div class="container-fluid article-body">
    <div class='row justify-content-center'>
      <div class="col-md-6">
        <div class="card-body form-body">
          <%= form_with(model: @category, local: true) do |f| %>
            <div class="form-group row">
              <div class="control-label col-sm-2">
                <%= f.label :name, class: 'text-link' %>
              </div>
              <div class="col-lg-10">
                <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
              </div>
            </div>
            <div class="form-group row">
              <div class="control-label col-sm-2">
                <%= f.label :priority, class: 'text-link' %>
              </div>
              <div class="col-lg-10">
                <%= f.text_field :priority, class: "form-control", placeholder: "Enter between 1 - 5" %>
              </div>
            </div>

            <div class="form-group row justify-content-center">
              <%= f.submit class: "btn btn-outline-dark btn-lg text-link" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
