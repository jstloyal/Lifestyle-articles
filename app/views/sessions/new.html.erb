<div class="container-fluid article-body">
  <div class="card mb-3">
    <div class='row'>
      <div class='col-md-6'>
        <div class="card-body">
          <h5 class="text-link" align="center">Login existing User</h5>
          <%= form_for(:sessions, url: login_path) do |f| %>
            <div class="form-group row">
              <div class="control-label col-sm-2">
                <%= f.label :name, class: 'text-link' %>
              </div>
              <div class="col-lg-10">
                <%= f.text_field :name, class: "form-control", placeholder: "Enter name", autofocus: true %>
              </div>
            </div>
            <div class="form-group row justify-content-center">
              <%= f.submit 'Login',  class: "btn btn-outline-dark btn-md text-link" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <%= image_tag("soccer.jpg", class: 'article-img') %>
      </div>
    </div>
  </div>
</div>
